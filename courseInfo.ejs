<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor</title>
</head>

<body>
    <!--Landing page-->

    <h2 class="section-heading">Professor Portal</h2>
    <link rel="stylesheet" href="styles.css">

    <%if (isLoggedIn) {%>    
        <div><h1><%= username%>: <span id="nameCourse"><%= courseName%></span></h1></div>
        <h4>Professor ID: <%= userID%></h4>
        <div>
            <button id="showAttend" onclick="switchButtonView();">View/Edit Attendance</button>
            <button onclick="hideAttendance();">Add date</button>
            <div id="viewOptions" style="display:none">
                <h3>View By</h3>
                <button id="studentButton" onclick="toggleView('studentView', 'dateView');">Student</button>
                <button id="dateButton" onclick="toggleView('dateView', 'studentView');">Date</button>
                <div id="studentView" style="display:none">
                    <select name="selectStudent" id="stuList">
                        <option disabled selected>Select Student...</option>
                        <% studentList.forEach(function(student) { %>
                            <option value="<%= student.studentID%>"><%= student.studentID%>: <%= student.studentName%></option>
                        <% }); %>
                    </select>
                    <div id="studentTable"></div>
                </div>
                <div id="dateView" style="display:none">
                    <select name="selectDate" id="daList">
                        <option disabled selected>Select Date...</option>
                        <% dateList.forEach(function(date) { %>
                            <option value="<%= date%>"><%= date%></option>
                        <% }); %>
                    </select>
                    <div id="dateTable"></div>
                </div>
            </div>
            <div id="addDate" style="display:none">
                <form id="createDate">
                    <label for="selectDate">Select a date:</label>
                    <input type="date" id="selectDate" name="selectDate">
                    <input type="submit">
                </form>
            </div>
        </div>
    <%} else {%>
        <div>
            <h2>Please login as a professor to view this page.</h2>
        </div>
    <%}%>

    <!--Footer-->

    <div class="footer">
        <!--left side of footer-->
        <p class="footer-text-left">
            <!--change redirect link-->
            <a href="" class= "menu" >TapIn</a>

            <!--right side of footer-->
            <div class="footer-content-right">
                <a href="https://github.com/"><img src="images/github.jpeg" class="icon-style" alt="Github icon"></a>
                <a href="https://www.twitter.com/"><img src="images/twitter.jpeg" class="icon-style" alt="Twitter icon"></a>
                <a href="https://www.twitter.com"><img src="images/email.jpeg" class="icon-style" alt="Emailicon"></a>
            </div>
        </p>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src= "professorlanding.js"></script>
</body>

</html>